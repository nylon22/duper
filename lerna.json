
{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "packages": [
    "packages/*",
    "docs"
  ],
  "message": "chore: publish %s",
  "command": {
    "publish": {
      "allowBranch": "master",
      "ignoreChanges": [
        "*.md",
        "*.test.js",
        "docs"
      ],
      "changelogPreset": "angular-bitbucket",
      "conventionalCommits": true
    }
  }
}
